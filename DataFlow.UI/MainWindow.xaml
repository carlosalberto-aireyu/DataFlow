                    DockPanel.Dock="Left"
                    x:Name="navStackPanel" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Center">

                    <controls:NavButton
                            Command="{Binding PlantillaCommand}"
                            NavLink="/Pages/Plantilla.xaml"
                            ButtonText="Plantillas"
                            IsSelected="{Binding IsPlantillaSelected}"
                            Tag="{x:Type pages:Plantilla}"
