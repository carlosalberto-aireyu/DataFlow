                            IsSelected="{Binding IsProcesoSelected}"
                            ButtonText="Procesar"
                            NavLink="/Pages/Proceso.xaml" 
                            Tag="{x:Type pages:Proceso}"
                            ShowRightDivider="True"
                            Margin="3" Padding="6" Icon="M12,4 L12,8 L20,12 L12,16 L12,20 L24,12 Z"/>
                    <controls:NavButton 
                            Command="{Binding HistorialCommand}"
                            IsSelected="{Binding IsHistorialSelected}"
                            ButtonText="Historial"
                            NavLink="/Pages/Historial.xaml" 
                            Tag="{x:Type pages:Historial}"
