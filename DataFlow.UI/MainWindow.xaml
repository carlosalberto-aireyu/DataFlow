            </DockPanel>

        </Border>
        <Frame NavigationUIVisibility="Hidden"
            Grid.Row="1"
            x:Name="navFrame" 
            Background="#F7F7F7"/>

        <Border Grid.Row="2" Background="#FDF0E8" Padding="10,8" BorderBrush="#E6E6E6" BorderThickness="1,0,0,0">
            <TextBlock x:Name="DisclaimerTextBlock"
               FontSize="11"
               Foreground="#666666"
               TextAlignment="Center"
               TextWrapping="Wrap"
               HorizontalAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>