<Window x:Class="DataFlow.UI.Pages.EditarColumnaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Editar Columna"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="White" CornerRadius="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" Opacity="0.3" ShadowDepth="2"/>
        </Border.Effect>

        <StackPanel Margin="24" Orientation="Vertical">

            <TextBlock Text="Editar Columna"
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="#1F2937" Margin="0,0,0,16"/>

            <!-- Índice -->
            <StackPanel Margin="0,0,0,12">

                <TextBlock Text="Índice" Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6"/>

                <Border Background="White" BorderBrush="#D1D5DB"
                        BorderThickness="1" CornerRadius="4">
                    <TextBox x:Name="IndexColumnTextBox"
                             Style="{StaticResource ModernTextBox}"/>
                </Border>
            </StackPanel>

            <!-- Nombre -->
            <StackPanel Margin="0,0,0,12">

                <TextBlock Text="Nombre" Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6"/>

                <Border Background="White" BorderBrush="#D1D5DB"
                        BorderThickness="1" CornerRadius="4">
                    <TextBox x:Name="NombreTextBox"
                             Style="{StaticResource ModernTextBox}"/>
                </Border>
            </StackPanel>

            <!-- Nombre para mostrar -->
            <StackPanel Margin="0,0,0,12">


                <TextBlock Text="Nombre para Mostrar" Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6"/>

                <Border Background="White" BorderBrush="#D1D5DB"
                        BorderThickness="1" CornerRadius="4">
                    <TextBox x:Name="DisplayNameTextBox"
                             Style="{StaticResource ModernTextBox}"/>
                </Border>
            </StackPanel>

            <!-- Tipo de Dato -->
            <StackPanel  Margin="0,0,0,12">


                <TextBlock Text="Tipo de Dato"  Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6" />

                <ComboBox x:Name="DataTypeComboBox"
                  Style="{StaticResource ModernComboBox}"
                  ItemsSource="{Binding DataTypes}"
                  SelectedValuePath="Id"
                  DisplayMemberPath="Code"
                  SelectedValue="{Binding DataTypeId}"/>
            </StackPanel>

            <!-- Valor por defecto -->
            <StackPanel Margin="0,0,0,12">

                <TextBlock Text="Valor por Defecto" Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6"/>

                <Border Background="White" BorderBrush="#D1D5DB"
                        BorderThickness="1" CornerRadius="4">
                    <TextBox x:Name="DefaultValueTextBox"
                             Style="{StaticResource ModernTextBox}"/>
                </Border>
            </StackPanel>

            <!-- Tipo de Columna -->
            <StackPanel Margin="0,0,0,12">


                <TextBlock Text="Tipo de Columna" Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6"/>


                <ComboBox x:Name="ColumnTypeComboBox"
                  Style="{StaticResource ModernComboBox}"
                  ItemsSource="{Binding ColumnTypes}"
                  SelectedValuePath="Id"
                  DisplayMemberPath="Code"
                  SelectedValue="{Binding ColumnTypeId}"/>
            </StackPanel>

            <!-- Descripción -->
            <StackPanel Margin="0,0,0,12">


                <TextBlock Text="Descripción" Style="{StaticResource ModernTextBlock}"
                           Margin="0,0,0,6"/>

                <Border Background="White" BorderBrush="#D1D5DB"
                        BorderThickness="1" CornerRadius="4">
                    <TextBox x:Name="DescripcionTextBox"
                             Width="320" Height="70"
                             
                             Style="{StaticResource ModernTextBox}"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             />
                </Border>
            </StackPanel>

            <TextBlock x:Name="ErrorMessage"
                       Grid.Row="8"
                       Foreground="#DC2626"
                       FontSize="11"
                       Margin="0,0,0,12"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>

            <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" Width="100" Height="36"
                        IsCancel="True" Click="CancelButton_Click"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="0,0,8,0"/>

                <Button Content="Guardar" Width="100" Height="36"
                        IsDefault="True" Click="SaveButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
