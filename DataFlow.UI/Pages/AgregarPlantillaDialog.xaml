<Window x:Class="DataFlow.UI.Pages.AgregarPlantillaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataFlow.UI.Pages"
        mc:Ignorable="d"
        Title="Agregar Plantilla"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        >

    <Border Background="White" CornerRadius="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" Opacity="0.3" ShadowDepth="2"/>
        </Border.Effect>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" 
                   Text="Crear Nueva Plantilla" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="#1F2937"
                   Margin="0,0,0,16"/>

            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                       Text="Descripción" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Foreground="#374151"
                       Margin="0,0,0,6"/>

                <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBox x:Name="DescripcionTextBox"
                         Width="320"
                         Height="80"
                         Padding="12,8"
                         FontSize="13"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MaxLength="500"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"
                         Background="Transparent"/>
                </Border>
            </Grid>

            <TextBlock x:Name="ErrorMessage"
                   Grid.Row="2"
                   Foreground="#DC2626"
                   FontSize="11"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                    Content="Cancelar"
                    Width="100"
                    Height="36"
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Foreground="#374151"
                    Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Margin="0,0,8,0"/>

                <Button x:Name="CreateButton"
                    Content="Crear"
                    Width="100"
                    Height="36"
                    IsDefault="True"
                    Click="CreateButton_Click"
                    Foreground="White"
                    Background="#3B82F6"
                    BorderThickness="0"
                    Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
