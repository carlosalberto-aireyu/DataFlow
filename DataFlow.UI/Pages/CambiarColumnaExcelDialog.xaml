<Window x:Class="DataFlow.UI.Pages.CambiarColumnaExcelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataFlow.UI.Pages"
        mc:Ignorable="d"
        Title="Cambiar Columna Excel"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize">
    <Grid Margin="24" MinWidth="350">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
               Text="Cambiar la Columna"
               FontSize="16"
               FontWeight="Bold"
               Foreground="#333"
               Margin="0,0,0,16"/>

        <!-- Descripción -->
        <TextBlock Grid.Row="1"
               Text="Ingrese la nueva columna de Excel (ej: B, C, AA):"
               FontSize="12"
               Foreground="#666"
               TextWrapping="Wrap"
               Margin="0,0,0,12"/>

        <!-- Input TextBox -->
        <TextBox Grid.Row="2"
             x:Name="NewColumnTextBox"
             Height="40"
             Text=""
             TextChanged="NewColumnTextBox_TextChanged"
             Style="{StaticResource ModernTextBox}"
             VerticalContentAlignment="Center"
             Margin="0,0,0,8"/>

        <!-- Validation Message -->
        <TextBlock Grid.Row="3"
               x:Name="ValidationMessage"
               FontSize="12"
               TextWrapping="Wrap"
               Margin="0,0,0,16"
               MinHeight="20"/>

        <!-- Botones -->
        <StackPanel Grid.Row="4"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,8,0,0">
            <Button x:Name="OKButton"
                Content="Aceptar"
                Click="OKButton_Click"
                Width="90"
                Height="35"
                Style="{StaticResource PrimaryButtonStyle}"
                Cursor="Hand"
                IsEnabled="False"/>

            <Button x:Name="CancelButton"
                Content="Cancelar"
                Click="CancelButton_Click"
                Style="{StaticResource CancelButtonStyle}"
                Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
