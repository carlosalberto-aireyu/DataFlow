<Page x:Class="DataFlow.UI.Pages.Historial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataFlow.UI.Pages"
      xmlns:conv="clr-namespace:DataFlow.UI.Converters"
      xmlns:controls="clr-namespace:DataFlow.UI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="Historial">

    <Page.Resources>
        <conv:JsonPrettyPrintConverter x:Key="JsonPrettyPrintConverter"/>
    </Page.Resources>

    <Grid Background="#f1f3f5" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Historial" FontSize="28" FontWeight="Bold" Foreground="#444" VerticalAlignment="Center"/>
            <Button x:Name="RefreshButton" Content="Actualizar" Margin="12,0,0,0" Padding="8,4" Click="RefreshButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="1" Foreground="#666" FontSize="12" Margin="0,0,0,8"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="HistDataGrid"
                      Style="{StaticResource ModernDataGridStyle}"
                        RowStyle="{StaticResource ModernDataGridRowStyle}"
                        ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                        CellStyle="{StaticResource CleanDataGridCellStyle}"
                      Grid.Column="0"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      CanUserResizeRows="False"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      RowHeaderWidth="0"
                      SelectionChanged="HistDataGrid_SelectionChanged"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      RowDetailsVisibilityMode="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding CreatedAt, StringFormat=\{0:dd/MM/yyyy HH:mm:ss\}}" Width="160"/>
                    <DataGridTextColumn Header="Archivo origen" Binding="{Binding FileSource}" Width="*"/>
                    <DataGridTextColumn Header="Archivo destino" Binding="{Binding FileTarget}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding FinalStatus}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <ContentControl x:Name="MonitorHost" Grid.Column="1" Margin="8,0,0,0"/>
        </Grid>
    </Grid>
</Page>