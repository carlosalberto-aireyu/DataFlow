<UserControl
    x:Class="DataFlow.UI.Pages.Components.DataToJsonExporter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="600">
    <StackPanel>
        <Border Background="{DynamicResource RegionBrush}" 
            BorderBrush="#E0E0E0" 
            BorderThickness="0,0,0,1"
            Padding="20" 
            Margin="0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock 
                Text="Exportar Configuraciones" 
                FontSize="16" 
                FontWeight="Bold" 
                Margin="0,0,0,15" 
                Foreground="#555555"/>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock 
                        Text="Carpeta a Exportar" 
                        FontSize="12" 
                        Foreground="Gray" 
                        Margin="2,0,0,5"/>
                        <TextBox
                        IsReadOnly="True"
                        Style="{StaticResource FilePathTextBoxStyle}"
                        Text="{Binding ParametroValue, UpdateSourceTrigger=PropertyChanged}" 
                        Padding="8,5"
                        Height="32"
                        VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <Button
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Height="32"
                    Padding="15,0"
                    Content="Buscar..."
                    Command="{Binding DataContext.SelectDirectoryCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                    CommandParameter="{Binding}" />
                </Grid>

                <Button
                Grid.Row="2"
                HorizontalAlignment="Right"
                Padding="20,4"
                MinHeight="35"
                Background="#0078D7"
                Foreground="White"
                FontWeight="SemiBold"
                Content="Exportar a JSON"
                Command="{Binding DataContext.ExportarInformacionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                CommandParameter="{Binding}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
        <Border Background="{DynamicResource RegionBrush}" 
        BorderBrush="#E0E0E0" 
        BorderThickness="0,0,0,0"
        Padding="20" 
        Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock 
            Text="Importar Configuraciones" 
            FontSize="16" 
            FontWeight="Bold" 
            Margin="0,0,0,15" 
            Foreground="#555555"/>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock 
                    Text="Archivo Json a importar" 
                    FontSize="12" 
                    Foreground="Gray" 
                    Margin="2,0,0,5"/>
                        <TextBox
                        IsReadOnly="True"
                        Style="{StaticResource FilePathTextBoxStyle}"
                        Padding="8,5"
                        Height="32"
                        Text="{Binding DataContext.JsonFilePath, RelativeSource={RelativeSource AncestorType=Page}}" 
                        VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <Button
                Grid.Column="1"
                VerticalAlignment="Bottom"
                Height="32"
                Padding="15,0"
                Content="Buscar..."
                Command="{Binding DataContext.SelectJsonFileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                CommandParameter="{Binding}" />
                </Grid>
                <DockPanel Grid.Row="2">
                    <CheckBox x:Name="OverwriteCheckBox" 
                      Content="Sobrescribir datos existentes" 
                      VerticalAlignment="Center"
                      FontSize="12"
                      Foreground="#555555"
                      IsChecked="{Binding DataContext.OverwriteExisting, RelativeSource={RelativeSource AncestorType=Page}}" />
                    
                    <Button
                        HorizontalAlignment="Right"
                        Padding="20,4"
                        MinHeight="35"
                        Background="#FDF0E8"
                        FontWeight="SemiBold"
                        Content="Importar desde JSON"
                        Command="{Binding DataContext.ImportarInformacionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>



            </Grid>
        </Border>
    </StackPanel>
</UserControl>