<UserControl
    x:Class="DataFlow.UI.Pages.Components.DataToJsonExporter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataFlow.UI.Pages.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="Carpeta a Exportar:" />

            <TextBox
                Grid.Column="1"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                IsReadOnly="True"
                Style="{StaticResource FilePathTextBoxStyle}"
                Text="{Binding ParametroValue, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Grid.Column="2"
                VerticalAlignment="Center"
                Command="{Binding DataContext.SelectDirectoryCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                CommandParameter="{Binding}"
                Content="Seleccionar Carpeta" />
        </Grid>
        <Grid Margin="5">
            <Button
                VerticalAlignment="Center"
                Command="{Binding DataContext.ExportarInformacionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                CommandParameter="{Binding}"
                Content="Exportar" />
        </Grid>
    </StackPanel>

</UserControl>
